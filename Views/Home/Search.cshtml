@model Webscraper.Models.ScrapeSearch
@{
    ViewBag.Title = "Search";
}

<h2>Search</h2>

@using (Html.BeginForm("Search", "Home"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.SearchString)
        @Html.TextBoxFor(m => m.SearchString, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.URL)
        @Html.TextBoxFor(m => m.URL, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Counter)
        @Html.TextBoxFor(m => m.Counter, new { @class = "form-control" })
    </div>
}